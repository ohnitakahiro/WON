<%= link_to "/records/#{record.id}", class: "show-link", method: :get do %>
  <div class="Content">
    <div class="Content__MyImg">
      <%= image_tag "test_image.jpg", alt: "icon", id: "assets", class: "Content__MyImg" %>
    </div>
    <div class="Content__Body">
      <div class="Content__Body__Info">
        <div class="Content__Body__Info__Name"><%= record.user.name %></div>
        <div class="Content__Body__Info__Date">
          <%# <%= message.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
          <%# <%= link_to '削除', "/records/#{record.id}", method: :delete %> %>
        </div>
      </div>
      <div class="Content__Body__TextField">
        <%= simple_format(record.text) %>
      </div>
    </div>
  </div>
<% end %>